{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "deploymentUid": {
            "type": "string",
            "minLength": 5,
            "metadata": {
                "description": "Deployment's unique ID"
            }
        },
        "releaseFolderUrl": {
            "type": "string",
            "minLength": 5,
            "metadata": {
                "description": "Release folder URL (in storage account)"
            }
        },
        "sasToken": {
            "type": "string",
            "minLength": 5,
            "metadata": {
                "description": "Container's SAS token"
            }
        }
    },
    "variables": {
        "Dns Deployment": "[concat('dns-', parameters('deploymentUid'))]",
        "Function Deployment": "[concat('function-', parameters('deploymentUid'))]"
    },
    "resources": [
        {
            "apiVersion": "2019-05-01",
            "type": "Microsoft.Resources/deployments",
            "name": "[variables('Dns Deployment')]",
            "dependsOn": [
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('releaseFolderUrl'), '/templates/dns.json?', parameters('sasToken'))]"
                },
                "parameters": {
                }
            }
        },
        {
            "apiVersion": "2019-05-01",
            "type": "Microsoft.Resources/deployments",
            "name": "[variables('Function Deployment')]",
            "dependsOn": [
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('releaseFolderUrl'), '/templates/function.json?', parameters('sasToken'))]"
                },
                "parameters": {
                }
            }
        }
    ],
    "outputs": {
    }
}
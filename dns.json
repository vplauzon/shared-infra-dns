{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "blogIps": {
            "type": "array",
            "minLength": 1,
            "metadata": {
                "description": "IPs of the blog domain"
            }
        }
    },
    "variables": {
        "default-colour": "blue",
        "Domain": "vincentlauzon.com",
        "Domain ID": "[resourceId('Microsoft.Network/dnszones', variables('Domain'))]",
        "TTL": "60",
        "blog-api": "vpl-blog-apim.azure-api.net",
        "shared-infra-cnames": [
            {
                "name": "pas-api.blue.dev",
                "cname": "vpl-main-ip-dev-blue.eastus.cloudapp.azure.com"
            },
            {
                "name": "pas-api.green.dev",
                "cname": "vpl-main-ip-dev-blue.eastus.cloudapp.azure.com"
            },
            {
                "name": "pas-api.dev",
                "cname": "[concat('pas-api.', variables('default-colour'), '.dev.vincentlauzon.com')]"
            }
        ]
    },
    "resources": [
        {
            "name": "[variables('Domain')]",
            "type": "Microsoft.Network/dnsZones",
            "apiVersion": "2018-05-01",
            "location": "global",
            "tags": {
            },
            "properties": {
            },
            "resources": [
                {
                    "comments": "Prod Blog Entry",
                    "name": "@",
                    "type": "A",
                    "apiVersion": "2018-05-01",
                    "dependsOn": [
                        "[variables('Domain ID')]"
                    ],
                    "properties": {
                        "metadata": {
                        },
                        "TTL": "[variables('TTL')]",
                        "ARecords": "[parameters('blogIps')]"
                    }
                },
                {
                    "comments": "Prod Blog API",
                    "type": "CNAME",
                    "apiVersion": "2018-05-01",
                    "name": "blog-api",
                    "dependsOn": [
                        "[variables('Domain ID')]"
                    ],
                    "properties": {
                        "TTL": "[variables('TTL')]",
                        "CNAMERecord": {
                            "cname": "[variables('blog-api')]"
                        }
                    }
                }
            ]
        },
        {
            "comments": "Shared Infra CNAMEs",
            "type": "Microsoft.Network/dnszones/CNAME",
            "apiVersion": "2018-05-01",
            "copy": {
                "name": "shared-infra-cnames",
                "count": "[length(variables('shared-infra-cnames'))]"
            },
            "name": "[concat(variables('Domain'), '/', variables('shared-infra-cnames')[copyIndex()].name)]",
            "dependsOn": [
                "[variables('Domain ID')]"
            ],
            "properties": {
                "TTL": "[variables('TTL')]",
                "CNAMERecord": {
                    "cname": "[variables('shared-infra-cnames')[copyIndex()].cname]"
                }
            }
        }

    ],
    "outputs": {
    }
}
{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "mainIpBlueDev": {
            "metadata": {
                "description": "Main IP of the blue-dev cluster"
            },
            "type": "string"
        },
        "mainIpGreenDev": {
            "metadata": {
                "description": "Main IP of the green-dev cluster"
            },
            "type": "string"
        },
        "mainIpBlueProd": {
            "metadata": {
                "description": "Main IP of the blue-prod cluster"
            },
            "type": "string"
        },
        "mainIpGreenProd": {
            "metadata": {
                "description": "Main IP of the green-prod cluster"
            },
            "type": "string"
        }
    },
    "variables": {
        "isDevBlue": true,
        "isProdBlue": true,
        "Domain": "vplauzon.com",
        "Domain ID": "[resourceId('Microsoft.Network/dnszones', variables('Domain'))]",
        "TTL": "20",
        "Main IPs": [
            {
                "name": "main-ip.blue.dev",
                "cname": "[parameters('mainIpBlueDev')]"
            },
            {
                "name": "main-ip.green.dev",
                "cname": "[parameters('mainIpGreenDev')]"
            },
            {
                "name": "main-ip.dev",
                "cname": "[if(variables('isDevBlue'), parameters('mainIpBlueDev'), parameters('mainIpGreenDev'))]"
            },
            {
                "name": "main-ip.blue.prod",
                "cname": "[parameters('mainIpBlueProd')]"
            },
            {
                "name": "main-ip.green.prod",
                "cname": "[parameters('mainIpGreenProd')]"
            },
            {
                "name": "main-ip.prod",
                "cname": "[if(variables('isProdBlue'), parameters('mainIpBlueProd'), parameters('mainIpGreenProd'))]"
            }
        ],
        "cnames-dev": [
            "pas-api",
            "pas-workbench"
        ],
        "cnames-prod": "[variables('cnames-dev')]"
    },
    "resources": [
        {
            "comments": "Boiler plate entries",
            "name": "[variables('Domain')]",
            "type": "Microsoft.Network/dnsZones",
            "apiVersion": "2017-09-01",
            "location": "global",
            "tags": {},
            "properties": {},
            "resources": [
                {
                    "name": "@",
                    "type": "NS",
                    "apiVersion": "2018-05-01",
                    "dependsOn": [
                        "[variables('Domain ID')]"
                    ],
                    "properties": {
                        "TTL": 172800,
                        "NSRecords": [
                            {
                                "nsdname": "ns1-09.azure-dns.com."
                            },
                            {
                                "nsdname": "ns2-09.azure-dns.net."
                            },
                            {
                                "nsdname": "ns3-09.azure-dns.org."
                            },
                            {
                                "nsdname": "ns4-09.azure-dns.info."
                            }
                        ]
                    }
                },
                {
                    "name": "@",
                    "type": "SOA",
                    "apiVersion": "2018-05-01",
                    "dependsOn": [
                        "[variables('Domain ID')]"
                    ],
                    "properties": {
                        "TTL": 3600,
                        "SOARecord": {
                            "email": "azuredns-hostmaster.microsoft.com",
                            "expireTime": 2419200,
                            "host": "ns1-09.azure-dns.com.",
                            "minimumTTL": 300,
                            "refreshTime": 3600,
                            "retryTime": 300,
                            "serialNumber": 1
                        },
                        "targetResource": {}
                    }
                }
            ]
        },
        {
            "comments": "Main IP Entries",
            "copy": {
                "name": "cnames-blue-dev",
                "count": "[length(variables('Main IPs'))]"
            },
            "name": "[concat(variables('Domain'), '/', variables('Main IPs')[copyIndex()].name)]",
            "type": "Microsoft.Network/dnsZones/CNAME",
            "apiVersion": "2018-05-01",
            "dependsOn": [
                "[variables('Domain ID')]"
            ],
            "properties": {
                "metadata": {},
                "TTL": "[variables('TTL')]",
                "CNAMERecord": {
                    "cname": "[variables('Main IPs')[copyIndex()].cname]"
                }
            }
        },
        {
            "comments": "Blue Dev Entries",
            "copy": {
                "name": "cnames-blue-dev",
                "count": "[length(variables('cnames-dev'))]"
            },
            "name": "[concat(variables('Domain'), '/', variables('cnames-dev')[copyIndex()], '.blue.dev')]",
            "type": "Microsoft.Network/dnsZones/CNAME",
            "apiVersion": "2018-05-01",
            "dependsOn": [
                "[variables('Domain ID')]"
            ],
            "properties": {
                "metadata": {},
                "TTL": "[variables('TTL')]",
                "CNAMERecord": {
                    "cname": "[concat('main-ip.blue.dev.', variables('Domain'))]"
                }
            }
        },
        {
            "comments": "Green Dev Entries",
            "copy": {
                "name": "cnames-green-dev",
                "count": "[length(variables('cnames-dev'))]"
            },
            "name": "[concat(variables('Domain'), '/', variables('cnames-dev')[copyIndex()], '.green.dev')]",
            "type": "Microsoft.Network/dnsZones/CNAME",
            "apiVersion": "2018-05-01",
            "dependsOn": [
                "[variables('Domain ID')]"
            ],
            "properties": {
                "metadata": {},
                "TTL": "[variables('TTL')]",
                "CNAMERecord": {
                    "cname": "[concat('main-ip.green.dev.', variables('Domain'))]"
                }
            }
        },
        {
            "comments": "Dev (non colour specific) Entries",
            "copy": {
                "name": "cnames-dev",
                "count": "[length(variables('cnames-dev'))]"
            },
            "name": "[concat(variables('Domain'), '/', variables('cnames-dev')[copyIndex()], '.dev')]",
            "type": "Microsoft.Network/dnsZones/CNAME",
            "apiVersion": "2018-05-01",
            "dependsOn": [
                "[variables('Domain ID')]"
            ],
            "properties": {
                "metadata": {},
                "TTL": "[variables('TTL')]",
                "CNAMERecord": {
                    "cname": "[concat('main-ip.dev.', variables('Domain'))]"
                }
            }
        },
        {
            "comments": "Blue Prod Entries",
            "copy": {
                "name": "cnames-blue-prod",
                "count": "[length(variables('cnames-prod'))]"
            },
            "name": "[concat(variables('Domain'), '/', variables('cnames-dev')[copyIndex()], '.blue')]",
            "type": "Microsoft.Network/dnsZones/CNAME",
            "apiVersion": "2018-05-01",
            "dependsOn": [
                "[variables('Domain ID')]"
            ],
            "properties": {
                "metadata": {},
                "TTL": "[variables('TTL')]",
                "CNAMERecord": {
                    "cname": "[concat('main-ip.blue.prod.', variables('Domain'))]"
                }
            }
        },
        {
            "comments": "Green Prod Entries",
            "copy": {
                "name": "cnames-green-prod",
                "count": "[length(variables('cnames-prod'))]"
            },
            "name": "[concat(variables('Domain'), '/', variables('cnames-dev')[copyIndex()], '.green')]",
            "type": "Microsoft.Network/dnsZones/CNAME",
            "apiVersion": "2018-05-01",
            "dependsOn": [
                "[variables('Domain ID')]"
            ],
            "properties": {
                "metadata": {},
                "TTL": "[variables('TTL')]",
                "CNAMERecord": {
                    "cname": "[concat('main-ip.green.prod.', variables('Domain'))]"
                }
            }
        },
        {
            "comments": "Prod (non colour specific) Entries",
            "copy": {
                "name": "cnames-prod",
                "count": "[length(variables('cnames-prod'))]"
            },
            "name": "[concat(variables('Domain'), '/', variables('cnames-dev')[copyIndex()])]",
            "type": "Microsoft.Network/dnsZones/CNAME",
            "apiVersion": "2018-05-01",
            "dependsOn": [
                "[variables('Domain ID')]"
            ],
            "properties": {
                "metadata": {},
                "TTL": "[variables('TTL')]",
                "CNAMERecord": {
                    "cname": "[concat('main-ip.prod.', variables('Domain'))]"
                }
            }
        }
    ],
    "outputs": {}
}